<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ThemNhanVienActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAvatarNhanVien"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/quoc_images_quanlynhanvien_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtMaNV"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/quoc_edt_quanlynhanvien_background"
            android:hint="Mã nhân viên"
            android:padding="15dp" />

        <Spinner
            android:id="@+id/spViTri"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtTenNV"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/quoc_edt_quanlynhanvien_background"
            android:hint="Tên nhân viên"
            android:padding="15dp" />

        <EditText
            android:id="@+id/edtSDT"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/quoc_edt_quanlynhanvien_background"
            android:hint="Số điện thoại"
            android:inputType="number"
            android:padding="15dp" />

        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/quoc_edt_quanlynhanvien_background"
            android:hint="Địa chỉ"
            android:padding="15dp" />

        <EditText
            android:id="@+id/edtMatKhau"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/quoc_edt_quanlynhanvien_background"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CCCD" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCCCDTruoc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="start"
            android:layout_marginRight="10dp"
            android:background="@drawable/quoc_images_quanlynhanvien_background" />

        <ImageView
            android:id="@+id/ivCCCDSau"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/quoc_images_quanlynhanvien_background" />
    </LinearLayout>

    <Button
        android:id="@+id/btnThemData"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/quoc_buttons_quanlynhanvien_background"
        android:padding="10dp"
        android:text="Thêm"
        android:textStyle="bold" />


</LinearLayout>