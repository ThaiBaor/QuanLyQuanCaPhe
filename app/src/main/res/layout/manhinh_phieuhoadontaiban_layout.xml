<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="53 Võ Vân Ngân, Linh Chiểu, Tp.Thủ Đức, Tp.HCM"
        android:gravity="center"
        android:textStyle="italic"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phiếu Thanh Toán"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Mã hóa đơn:"
            android:textAlignment="textEnd"
            android:textSize="18dp"
            android:paddingRight="8dp"></TextView>
        <TextView
            android:id="@+id/tvMa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09123"
            android:textSize="18dp"
            android:layout_weight="7"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bàn: "
            android:textSize="18dp"
            android:textAlignment="textEnd"
            android:layout_weight="1"></TextView>
        <TextView
            android:id="@+id/tvBan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="18dp"
            android:layout_weight="1"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Tên phục vụ:"
            android:textAlignment="textEnd"
            android:paddingRight="8dp"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/tvTenNV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn Tèo"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Ngày:"
            android:textAlignment="center"
            android:paddingRight="8dp"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/10/2023"
            android:textSize="18dp"></TextView>
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Giờ:"
            android:textAlignment="textEnd"
            android:paddingRight="8dp"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/tvGio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="18dp"></TextView>
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Khu:"
            android:textAlignment="textEnd"
            android:paddingRight="8dp"
            android:layout_weight="5"
            android:textSize="18dp"></TextView>
        <TextView
            android:id="@+id/tvKhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khu A"
            android:layout_weight="5"
            android:textSize="18dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Tên món"
            android:textSize="20dp"
            android:textAlignment="center"></TextView>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Số lượng"
            android:textAlignment="center"></TextView>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Thành tiền"
            android:textAlignment="center"></TextView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng cộng :"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAlignment="center"
            ></TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnQuayLai"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:layout_marginLeft="20dp"></Button>
        <Button
            android:id="@+id/btnThanhToan"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:layout_marginLeft="110dp"></Button>
    </LinearLayout>
</LinearLayout>