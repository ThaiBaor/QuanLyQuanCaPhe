<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activities.ThemNhanVienActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivEditAvatarNhanVien"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/quoc_images_quanlynhanvien_background" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTestLoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtEditMaNV"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/quanly_edittext_background"
                    android:enabled="false"
                    android:hint="Mã nhân viên"
                    android:padding="15dp" />

                <Spinner
                    android:id="@+id/spEditViTri"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtEditTenNV"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/quanly_edittext_background"
                    android:hint="Tên nhân viên"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/edtEditSDT"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/quanly_edittext_background"
                    android:hint="Số điện thoại"
                    android:inputType="number"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/edtEditDiaChi"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/quanly_edittext_background"
                    android:hint="Địa chỉ"
                    android:padding="15dp" />

                <EditText
                    android:id="@+id/edtEditMatKhau"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/quanly_edittext_background"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:padding="15dp" />
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CCCD" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivEditCCCDTruoc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/quoc_images_quanlynhanvien_background" />

                <ImageView
                    android:id="@+id/ivEditCCCDSau"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/quoc_images_quanlynhanvien_background" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCapNhapData"
                style="@style/quanly_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/quanly_button_background"
                android:padding="10dp"
                android:text="Cập nhập" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>